# バックエンドAPI URL (開発用)
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1

# 本番: Cloud Run 保護エンドポイント呼び出し用
# BACKEND_BASE_URL=https://<cloud-run-host>/api/v1
# BACKEND_IAM_AUDIENCE=https://<cloud-run-host>  # audはパスなし
# GCP_SA_JSON={"type":"service_account", ...}  # もしくは base64 文字列
# USE_LOCAL_BACKEND=false                     # 本番では false。ローカルでCloud Runを迂回したいとき true

# Clerk認証設定
# Clerkダッシュボードの API Keys から取得
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxx
CLERK_SECRET_KEY=sk_test_xxx

# Clerk リダイレクトURL設定
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard
